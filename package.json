{
    "name": "react-router-chart",
    "version": "0.0.0",
    "description": "Static route mapping for React Router",
    "author": "iamogbz",
    "license": "Unlicense",
    "main": "./main.js",
    "homepage": "https://github.com/iamogbz/react-router-chart#readme",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/iamogbz/react-router-chart.git"
    },
    "bugs": {
        "url": "https://github.com/iamogbz/react-router-chart/issues"
    },
    "keywords": [
        "react",
        "router",
        "react-router",
        "javascript",
        "es6",
        "nodejs",
        "chart",
        "graph",
        "cartographer"
    ],
    "scripts": {
        "commit": "git-cz",
        "commitlint": "commitlint-travis",
        "lint": "eslint ./src/**",
        "test": "jest",
        "test-watch": "jest --watch",
        "build": "webpack --mode=production",
        "build-watch": "webpack --mode=development --watch",
        "release": "semantic-release"
    },
    "release": {
        "plugins": [
            "@semantic-release/commit-analyzer",
            "@semantic-release/release-notes-generator",
            "@semantic-release/github",
            [
                "@semantic-release/npm",
                {
                    "pkgRoot": "./lib"
                }
            ]
        ]
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ]
    },
    "config": {
        "commitizen": {
            "path": "cz-conventional-changelog"
        }
    },
    "lint-staged": {
        "*.{js,ts}": [
            "eslint",
            "jest --bail --findRelatedTests"
        ]
    },
    "husky": {
        "hooks": {
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
            "pre-commit": "lint-staged"
        }
    },
    "jest": {
        "preset": "ts-jest",
        "moduleDirectories": [
            "./src",
            "./tests",
            "./node_modules"
        ],
        "testPathIgnorePatterns": [
            "./artifacts/",
            "./node_modules/"
        ],
        "setupFilesAfterEnv": [
            "./config/setupTests.ts"
        ],
        "coverageDirectory": "./artifacts/coverage"
    },
    "peerDependencies": {
        "history": ">=4.0.0",
        "react": ">=16.0.0",
        "react-router": ">=4.0.0"
    },
    "devDependencies": {
        "@babel/cli": "^7.12.10",
        "@babel/core": "^7.12.10",
        "@babel/plugin-proposal-class-properties": "^7.12.1",
        "@babel/preset-env": "^7.12.10",
        "@babel/preset-react": "^7.12.10",
        "@babel/preset-typescript": "^7.12.7",
        "@babel/runtime": "^7.12.5",
        "@commitlint/cli": "^11.0.0",
        "@commitlint/config-conventional": "^11.0.0",
        "@commitlint/travis-cli": "^11.0.0",
        "@types/copy-webpack-plugin": "^6.3.0",
        "@types/enzyme": "^3.10.8",
        "@types/enzyme-adapter-react-16": "^1.0.6",
        "@types/jest": "^26.0.19",
        "@types/node": "^14.14.13",
        "@types/react": "^17.0.0",
        "@types/react-router": "^5.1.8",
        "@types/webpack": "^4.41.25",
        "@typescript-eslint/eslint-plugin": "^4.9.1",
        "@typescript-eslint/parser": "^4.9.1",
        "acorn": "^8.0.4",
        "babel-eslint": "^10.1.0",
        "babel-loader": "^8.2.2",
        "commitizen": "^4.2.2",
        "copy-webpack-plugin": "^7.0.0",
        "coveralls": "^3.1.0",
        "cz-conventional-changelog": "^3.3.0",
        "enzyme": "^3.11.0",
        "enzyme-adapter-react-16": "^1.15.5",
        "eslint": "^7.15.0",
        "eslint-config-prettier": "^7.0.0",
        "eslint-import-resolver-typescript": "^2.3.0",
        "eslint-plugin-import": "^2.22.1",
        "eslint-plugin-jsx-a11y": "^6.4.1",
        "eslint-plugin-prettier": "^3.2.0",
        "eslint-plugin-react": "^7.21.5",
        "eslint-plugin-react-hooks": "^4.2.0",
        "husky": "^4.3.6",
        "jest": "^26.6.3",
        "lint-staged": "^10.5.3",
        "prettier": "^2.1.2",
        "react": "^16.14.0",
        "react-dom": "^17.0.1",
        "react-router": "^5.2.0",
        "rxjs": "^6.6.3",
        "semantic-release": "^17.3.0",
        "ts-jest": "^26.4.4",
        "ts-node": "^9.1.1",
        "typescript": "^4.1.3",
        "webpack": "^5.10.0",
        "webpack-cli": "^4.2.0"
    }
}
