{
    "name": "react-router-chart",
    "version": "0.0.0",
    "description": "Static route mapping for React Router",
    "author": "iamogbz",
    "license": "GPL-3.0",
    "main": "./main.js",
    "homepage": "https://github.com/iamogbz/react-router-chart#readme",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/iamogbz/react-router-chart.git"
    },
    "bugs": {
        "url": "https://github.com/iamogbz/react-router-chart/issues"
    },
    "keywords": [
        "react",
        "router",
        "react-router",
        "javascript",
        "es6",
        "nodejs",
        "chart",
        "graph",
        "cartographer"
    ],
    "scripts": {
        "commit": "git-cz",
        "commitlint": "commitlint-travis",
        "lint": "eslint ./src/**",
        "test": "jest",
        "test-watch": "jest --watch",
        "build": "webpack --mode=production",
        "build-watch": "webpack --mode=development --watch",
        "release": "semantic-release"
    },
    "release": {
        "plugins": [
            "@semantic-release/commit-analyzer",
            "@semantic-release/release-notes-generator",
            "@semantic-release/github",
            [
                "@semantic-release/npm",
                {
                    "pkgRoot": "./lib"
                }
            ]
        ]
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ]
    },
    "config": {
        "commitizen": {
            "path": "cz-conventional-changelog"
        }
    },
    "lint-staged": {
        "*.js": [
            "eslint"
        ],
        "*.ts": [
            "tslint"
        ],
        "*.{js,ts}": [
            "jest --bail --findRelatedTests"
        ]
    },
    "husky": {
        "hooks": {
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
            "pre-commit": "lint-staged"
        }
    },
    "jest": {
        "preset": "ts-jest",
        "moduleDirectories": [
            "./src",
            "./tests",
            "./node_modules"
        ],
        "testPathIgnorePatterns": [
            "./artifacts/",
            "./node_modules/"
        ],
        "setupFilesAfterEnv": [
            "./config/setupTests.ts"
        ],
        "coverageDirectory": "./artifacts/coverage"
    },
    "peerDependencies": {
        "history": "^4.0.0",
        "react": "^16.0.0",
        "react-router": "^4.0.0||^5.0.0"
    },
    "devDependencies": {
        "@babel/cli": "^7.8.4",
        "@babel/core": "^7.8.4",
        "@babel/plugin-proposal-class-properties": "^7.8.3",
        "@babel/preset-env": "^7.8.4",
        "@babel/preset-react": "^7.8.3",
        "@babel/preset-typescript": "^7.8.3",
        "@babel/runtime": "^7.8.4",
        "@commitlint/cli": "^8.3.5",
        "@commitlint/config-conventional": "^8.3.4",
        "@commitlint/travis-cli": "^8.3.5",
        "@types/copy-webpack-plugin": "^5.0.0",
        "@types/enzyme": "^3.10.5",
        "@types/enzyme-adapter-react-16": "^1.0.6",
        "@types/jest": "^25.1.2",
        "@types/node": "^13.7.2",
        "@types/react": "^16.9.20",
        "@types/react-router": "^5.1.4",
        "@types/webpack": "^4.41.6",
        "@typescript-eslint/eslint-plugin": "^2.20.0",
        "@typescript-eslint/parser": "^2.20.0",
        "acorn": "^7.1.0",
        "babel-eslint": "^10.0.3",
        "babel-loader": "^8.0.6",
        "commitizen": "^4.0.3",
        "copy-webpack-plugin": "^5.1.1",
        "coveralls": "^3.0.9",
        "cz-conventional-changelog": "^3.1.0",
        "enzyme": "^3.11.0",
        "enzyme-adapter-react-16": "^1.15.2",
        "eslint": "^6.8.0",
        "eslint-config-airbnb": "^18.0.1",
        "eslint-config-prettier": "^6.10.0",
        "eslint-import-resolver-typescript": "^2.0.0",
        "eslint-plugin-import": "^2.20.1",
        "eslint-plugin-jsx-a11y": "^6.2.3",
        "eslint-plugin-prettier": "^3.1.2",
        "eslint-plugin-react": "^7.18.3",
        "husky": "^4.2.3",
        "jest": "^25.1.0",
        "lint-staged": "^10.0.7",
        "prettier": "^1.19.1",
        "react": "^16.12.0",
        "react-dom": "^16.12.0",
        "react-router": "^5.1.2",
        "rxjs": "^6.5.4",
        "semantic-release": "^17.0.4",
        "ts-jest": "^25.2.1",
        "ts-node": "^8.6.2",
        "tslint": "^6.0.0",
        "typescript": "^3.7.5",
        "webpack": "^4.41.6",
        "webpack-cli": "^3.3.11"
    }
}
